<%- layout('Layout/template.ejs') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-4">
            <div class="list-group" id="list-tab" role="tablist">
                <a class="list-group-item list-group-item-action active" id="list-email-list" data-toggle="list"
                    href="#list-email" role="tab" aria-controls="email">Email</a>
                <a class="list-group-item list-group-item-action" id="list-account-list" data-toggle="list" href="#list-account"
                    role="tab" aria-controls="account">Cuenta</a>
                <a class="list-group-item list-group-item-action" id="list-profile-list" data-toggle="list" href="#list-profile"
                    role="tab" aria-controls="profile">Profile</a>
            </div>
        </div>
        <div class="col-8">
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="list-email" role="tabpanel" aria-labelledby="list-email-list">
                    <!--VALIDACION FORM PARA CAMBIAR CORREO-->
                    <form class="needs-validation" novalidate>
                        <div class="form-group">
                            <h2>Cambia tu correo</h2>
                            <label for="new-email">Nuevo correo electronico:</label>
                            <input type="email" id="new-email" class="form-control" required>
                            <div class="invalid-feedback">
                                debe ingresar datos correctos para el correo
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">Guardar cambios</button>
                    </form>
                </div>
                <div class="tab-pane fade" id="list-account" role="tabpanel" aria-labelledby="list-account-list">
                    <!--VALIDACION FORM PARA CAMBIAR PASSWORD-->
                    <form action="">
                        <div class="form-group">
                            <h2>Cuenta</h2>
                            <label for="password-actual">Password actual:</label>
                            <input type="password" id="password-actual" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password-nuevo">Password nuevo:</label>
                            <input type="password" id="password-nuevo" class="form-control">
                            <label for="password-nuevo-confirm">Confirmar password nuevo:</label>
                            <input type="password" id="password-nuevo-confirm" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-success">Guardar cambios</button>
                    </form>

                </div>
                <div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">
                    <form action="">
                        <div class="form-group">
                            <h2>Perfil</h2>
                            <label for="cambiar-username">Cambiar username:</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">@</span>
                                </div>
                                <input type="text" class="form-control" placeholder="Username" aria-label="Username"
                                    aria-describedby="basic-addon1">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">Cambiar username</button>

                        <div class="form-group">
                            <h2 class="mt-5">Cambiar foto de perfil:</h2>
                            <label for="nueva-foto-perfil">Seleccionar una foto:</label>
                            <input type="file" class="form-control-file" id="nueva-foto-perfil">
                        </div>
                        <button type="submit" class="btn btn-success">Cambiar foto de perfil</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!--SCRIPT PARA VALIDAR FORMULARIOS-->
<script src="./js/form-validation.js"></script>

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
